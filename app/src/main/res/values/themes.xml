<resources>

    <style name="Base.Theme.VaccinationControl" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/main_color</item>
    </style>

    <style name="Theme.VaccinationControl" parent="Base.Theme.VaccinationControl" />
    
    <style name="DescriptionText">
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="UserInfoText">
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="UserInfoLayout">
        <item name="android:layout_margin">@dimen/user_info_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TopBarLayout">
        <item name="android:background">@color/main_color</item>
    </style>

    <style name="WhiteBackArrow">
        <item name="android:src">@drawable/ic_arrow_back_white</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="GrayBackArrow">
        <item name="android:src">@drawable/ic_arrow_back_gray</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TopBarTitle">
        <item name="android:textSize">@dimen/top_bar_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>